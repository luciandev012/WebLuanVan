@model WebLuanVan.Data.ViewModels.Request.Thesis.ThesisRequest

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@section Scripts{
    <script>
        var text;
        function test(a) {
            text = a.options[a.selectedIndex].value;
            alert(text);
            var test = document.getElementById("myInput");
            
            test.value += text;
            test.value += ",";
        };
    </script>
}
<!-- Header -->
<div class="header bg-primary pb-6">
    <div class="container-fluid">
        <div class="header-body">
            <div class="row align-items-center py-4">
                <div class="col-lg-6 col-7">
                    <h6 class="h2 text-white d-inline-block mb-0">Tables</h6>
                    <nav aria-label="breadcrumb" class="d-none d-md-inline-block ml-md-4">
                        <ol class="breadcrumb breadcrumb-links breadcrumb-dark">
                            <li class="breadcrumb-item"><a href="/"><i class="fas fa-home"></i></a></li>
                            <li class="breadcrumb-item"><a href="#">Table</a></li>
                            <li class="breadcrumb-item active" aria-current="page">Luận văn</li>
                        </ol>
                    </nav>
                </div>
                <div class="col-lg-6 col-5 text-right">
                    <a asp-action="Index" asp-controller="Thesis" class="btn btn-sm btn-neutral">Danh sách</a>

                </div>
            </div>
        </div>
    </div>
</div>
<!-- Page content -->
<div class="container-fluid mt--6">
    <div class="row">
        <div class="col">
            <div class="card">
                <!-- Card header -->
                <div class="card-header border-0">
                    <h3 class="mb-0">Thêm mới Luận văn</h3>
                </div>
                <!-- Create User -->
                <form asp-action="Create" enctype="multipart/form-data" method="post" class="input-form">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="form-group">
                        <label asp-for="ThesisName" class="control-label"></label>
                        <input asp-for="ThesisName" class="form-control" />
                        <span asp-validation-for="ThesisName" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="StudentId" class="control-label"></label>
                        <input name="studentId" type="text" id="myInput" class="form-control" />
                        <select asp-items="@ViewBag.Students" class="form-control" id="txtSV" onchange="test(this)">
                            <option>--Chọn sinh viên--</option>
                        </select>
                        <span asp-validation-for="StudentId" class="text-danger"></span>
                    </div>
                    
                    <div class="form-group">
                        <label asp-for="Year" class="control-label"></label>
                        <input asp-for="Year" class="form-control" />
                        <span asp-validation-for="Year" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Phase" class="control-label"></label>
                        <input asp-for="Phase" class="form-control" />
                        <span asp-validation-for="Phase" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="AcademicYear" class="control-label"></label>
                        <input asp-for="AcademicYear" class="form-control" />
                        <span asp-validation-for="AcademicYear" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="GuideLectureId" class="control-label"></label>
                        <select name="guideLectureId" asp-items="@ViewBag.Lectures" class="form-control">
                        </select>
                    </div>
                    <div class="form-group">
                        <label asp-for="DebateLectureId" class="control-label"></label>
                        <select name="debateLectureId" asp-items="@ViewBag.Lectures" class="form-control">
                        </select>
                    </div>
                    <div class="form-group">
                        <label asp-for="FacultyId" class="control-label"></label>
                        <select name="facultyId" asp-items="@ViewBag.Faculties" class="form-control">
                            <option>--Chọn khoa--</option>
                        </select>
                    </div>
                    <div class="form-group">
                        <label asp-for="Language" class="control-label"></label>
                        <select name="language" asp-items="@ViewBag.Languages" class="form-control">
                            <option>--Chọn ngôn ngữ--</option>
                        </select>
                    </div>
                    <div class="form-group">
                        <label asp-for="ThesisId" class="control-label"></label>
                        <input asp-for="ThesisId" class="form-control" />
                        <span asp-validation-for="ThesisId" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="FileContent" class="control-label"></label>
                        <input asp-for="FileContent" type="file" class="form-control" />
                        <span asp-validation-for="FileContent" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="ProtectedAt" class="control-label"></label>
                        <input asp-for="ProtectedAt" class="form-control" />
                        <span asp-validation-for="ProtectedAt" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="MakedAt" class="control-label"></label>
                        <input asp-for="MakedAt" class="form-control" />
                        <span asp-validation-for="MakedAt" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="FinishedAt" class="control-label"></label>
                        <input asp-for="FinishedAt" class="form-control" />
                        <span asp-validation-for="FinishedAt" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Score" class="control-label"></label>
                        <input asp-for="Score" class="form-control" />
                        <span asp-validation-for="Score" class="text-danger"></span>
                    </div>
                    <div class="form-group form-check">
                        <label class="form-check-label">
                            <input class="form-check-input" asp-for="IsProtected" /> @Html.DisplayNameFor(model => model.IsProtected)
                        </label>
                    </div>
                    <div class="form-group">
                        <input type="submit" value="Create" class="btn btn-primary" />
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
