@model WebLuanVan.Data.ViewModels.ModelBinding.LectureViewModel

@{
    ViewData["Title"] = "Delete";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<!-- Header -->
<div class="header bg-primary pb-6">
    <div class="container-fluid">
        <div class="header-body">
            <div class="row align-items-center py-4">
                <div class="col-lg-6 col-7">
                    <h6 class="h2 text-white d-inline-block mb-0">Tables</h6>
                    <nav aria-label="breadcrumb" class="d-none d-md-inline-block ml-md-4">
                        <ol class="breadcrumb breadcrumb-links breadcrumb-dark">
                            <li class="breadcrumb-item"><a href="/"><i class="fas fa-home"></i></a></li>
                            <li class="breadcrumb-item"><a href="#">Table</a></li>
                            <li class="breadcrumb-item active" aria-current="page">Giảng viên</li>
                        </ol>
                    </nav>
                </div>
                <div class="col-lg-6 col-5 text-right">
                    <a asp-action="Index" asp-controller="Thesis" class="btn btn-sm btn-neutral">Danh sách giảng viên</a>
                    <a href="#" class="btn btn-sm btn-neutral">Filters</a>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- Page content -->
<div class="container-fluid mt--6">
    <div class="row">
        <div class="col">
            <div class="card">
                <!-- Card header -->
                <div class="card-header border-0">
                    <h3 class="mb-0">Table users</h3>
                </div>
                <div class="row" style="padding:1.5rem">

                    <div class="col-md-6">
                        <dl class="row">
                            <h6>Bạn có muốn xoá giảng viên không?</h6>
                            <hr />
                            <dt class="col-sm-2">
                                @Html.DisplayNameFor(model => model.LectureName)
                            </dt>
                            <dd class="col-sm-10">
                                @Html.DisplayFor(model => model.LectureName)
                            </dd>
                            <dt class="col-sm-2">
                                @Html.DisplayNameFor(model => model.LectureRole)
                            </dt>
                            <dd class="col-sm-10">
                                @Html.DisplayFor(model => model.LectureRole)
                            </dd>
                            <dt class="col-sm-2">
                                @Html.DisplayNameFor(model => model.Email)
                            </dt>
                            <dd class="col-sm-10">
                                @Html.DisplayFor(model => model.Email)
                            </dd>
                        </dl>

                        <form asp-action="Delete" method="post">
                            <input type="submit" value="Xoá" class="btn btn-danger" /> 
                            
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
